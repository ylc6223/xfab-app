<Window x:Class="xfab_app.ContentContrls.CheckBoxDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:xfab_app.ContentContrls"
        mc:Ignorable="d"
        Title="CheckBoxDemo" Height="450" Width="800">
    <Grid x:Name="wrap">
        <Label Height="20" Background="Coral" VerticalAlignment="Top">选课：</Label>
        <CheckBox IsChecked="True" Margin="10,20" FontSize="20" Foreground="Chocolate" Content="javascript"></CheckBox>
        <CheckBox Margin="10,50" FontSize="20" Foreground="Chocolate" Content="java"></CheckBox>
        <CheckBox Margin="10,80" FontSize="20" Foreground="Chocolate" Content="c#"></CheckBox>
        <CheckBox Margin="10,110" FontSize="20" Foreground="Chocolate" Content="rust"></CheckBox>
        <Button Width="100" Height="30" Background="Brown" Foreground="White" FontSize="16" VerticalAlignment="Bottom" Margin="0,0,0,50" Click="ButtonBase_OnClick">获取我的选课</Button>
    </Grid>
</Window>
