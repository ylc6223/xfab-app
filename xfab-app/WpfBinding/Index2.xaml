<Window x:Class="xfab_app.WpfBinding.Index2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:xfab_app.WpfBinding"
        mc:Ignorable="d"
        Title="Index2" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Slider x:Name="slider" Margin="5"></Slider>
            <TextBox x:Name="a" Text="{Binding ElementName=slider,Path=Value}" Margin="5" Height="30"></TextBox>
            <TextBox x:Name="b" Text="{Binding ElementName=slider,Path=Value}" Margin="5" Height="30"></TextBox>
            <TextBox x:Name="c" Text="{Binding ElementName=slider,Path=Value}" Margin="5" Height="30"></TextBox>
        </StackPanel>
    </Grid>
</Window>
